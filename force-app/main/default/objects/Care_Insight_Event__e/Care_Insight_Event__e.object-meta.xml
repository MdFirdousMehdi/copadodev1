<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <deploymentStatus>Deployed</deploymentStatus>
    <eventType>StandardVolume</eventType>
    <label>Care Insight Event</label>
    <pluralLabel>Care Insight Events</pluralLabel>
    <publishBehavior>PublishImmediately</publishBehavior>

    <!-- Patient Id (18-char, or external ref) -->
    <fields>
        <fullName>PatientId__c</fullName>
        <label>Patient Id</label>
        <length>18</length>
        <required>false</required>
        <type>Text</type>
    </fields>

    <!-- Insight Type (Text for platform events) -->
    <fields>
        <fullName>InsightType__c</fullName>
        <label>Insight Type</label>
        <length>40</length>
        <required>false</required>
        <type>Text</type>
    </fields>

    <!-- Severity (Text for platform events) -->
    <fields>
        <fullName>Severity__c</fullName>
        <label>Severity</label>
        <length>40</length>
        <required>false</required>
        <type>Text</type>
    </fields>

    <!-- Recommendation Text -->
    <fields>
        <fullName>Recommendation__c</fullName>
        <label>Recommendation</label>
        <required>false</required>
        <type>TextArea</type>
    </fields>

</CustomObject>
